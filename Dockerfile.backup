# Backup service container
FROM alpine:3.18

# Install required packages
RUN apk update && apk add --no-cache \
    postgresql-client \
    aws-cli \
    dcron \
    bash \
    gzip \
    tar \
    curl \
    && rm -rf /var/cache/apk/*

# Create backup user
RUN addgroup -g 1001 backup && \
    adduser -u 1001 -G backup -s /bin/bash -D backup

# Create backup directories
RUN mkdir -p /backup/db /backup/files /backup/logs && \
    chown -R backup:backup /backup

# Copy backup scripts
COPY --chown=backup:backup scripts/backup.sh /app/backup.sh
COPY --chown=backup:backup scripts/restore.sh /app/restore.sh

# Make scripts executable
RUN chmod +x /app/backup.sh /app/restore.sh

# Switch to backup user
USER backup

# Set working directory
WORKDIR /app

# Default command runs cron in foreground
CMD ["crond", "-f", "-d", "8"]