# Neon Database Configuration for NXT-SPP-Supplier Inventory Portfolio
# Copy this file to .env.local and fill in your actual values

# Neon Database Connection
NEON_DATABASE_URL=postgresql://[user]:[password]@[host]/[database]?sslmode=require
NEON_DATABASE_HOST=proud-mud-50346856.us-east-2.aws.neon.tech
NEON_DATABASE_NAME=nxt-spp-supplier-inventory-portfolio
NEON_DATABASE_USER=your-neon-user
NEON_DATABASE_PASSWORD=your-neon-password

# Connection Pool Configuration
NEON_POOL_MIN=2
NEON_POOL_MAX=10
NEON_POOL_IDLE_TIMEOUT=30000
NEON_POOL_CONNECTION_TIMEOUT=10000

# Feature Flags
ENABLE_NEON_DATABASE=true
ENABLE_PRICELIST_UPLOAD=true
ENABLE_INVENTORY_SELECTION=true
ENABLE_SOH_REPORTING=true

# Security
API_RATE_LIMIT_UPLOAD=10  # Max uploads per minute
API_RATE_LIMIT_QUERY=100  # Max queries per minute

# File Upload Configuration
MAX_UPLOAD_SIZE_MB=10
ALLOWED_UPLOAD_EXTENSIONS=.xlsx,.xls,.csv

# Pricelist Processing
AUTO_VALIDATE_PRICELISTS=false
AUTO_MERGE_PRICELISTS=false
PRICELIST_RETENTION_DAYS=365

# Inventory Selection
AUTO_ARCHIVE_SELECTIONS_DAYS=180
MARK_DISCONTINUED_DAYS=90
CLEAR_NEW_FLAGS_DAYS=30
