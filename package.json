    "zod": "^3.22.4",
    "zustand": "^5.0.8"
  },
  "overrides": {
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@modelcontextprotocol/sdk": "^0.6.1",
    "chrome-devtools-mcp": "^0.4.0",
    "dotenv": "^17.2.2",
    "eslint": "^9.35.0",
