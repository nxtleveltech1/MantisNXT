{
    "name":  "mantisnxt",
    "version":  "1.0.0",
    "private":  true,
    "packageManager":  "bun@latest",
    "scripts":  {
                    "dev":  "bun next dev --webpack",
                    "dev:stop":  "bun scripts/dev-server-manager.js stop",
                    "dev:status":  "bun scripts/dev-server-manager.js status",
                    "dev:restart":  "bun scripts/dev-server-manager.js restart",
                    "dev:raw":  "bun next dev --webpack",
                    "build":  "bun next build --webpack",
                    "build:strict":  "bun run type-check \u0026\u0026 bun next build --webpack",
                    "start":  "bun next start",
                    "lint":  "bun x eslint . --ext .ts,.tsx",
                    "lint:ssot":  "bun scripts/check-public-dml.ts",
                    "type-check":  "bun x tsc --noEmit",
                    "dry-run":  "bun --bun scripts/dry-run.ts",
                    "stabilize":  "bun scripts/system-stabilizer.js setup",
                    "stabilize:cleanup":  "bun scripts/system-stabilizer.js cleanup",
                    "stabilize:monitor":  "bun scripts/system-stabilizer.js monitor",
                    "stabilize:health":  "bun scripts/system-stabilizer.js health",
                    "stabilize:emergency":  "bun scripts/system-stabilizer.js emergency",
                    "monitor:start":  "bun scripts/system-resource-monitor.js start",
                    "monitor:check":  "bun scripts/system-resource-monitor.js check",
                    "monitor:cleanup":  "bun scripts/system-resource-monitor.js cleanup",
                    "session:cleanup":  "bun scripts/session-cleanup.ts",
                    "session:cleanup:daemon":  "bun scripts/session-cleanup.ts --daemon",
                    "db:migrate":  "bun scripts/run-migration.ts",
                    "db:migrate:verify":  "bun scripts/verify-migration.ts",
                    "clerk:migrate":  "bun scripts/migrate-users-to-clerk.ts",
                    "clerk:migrate:dry":  "bun scripts/migrate-users-to-clerk.ts --dry-run",
                    "clerk:sync-roles":  "bun scripts/sync-roles-to-clerk.ts",
                    "clerk:sync-roles:dry":  "bun scripts/sync-roles-to-clerk.ts --dry-run",
                    "db:validate":  "bun scripts/validate-database.ts",
                    "db:validate:full":  "bun scripts/master-validation-runner.js",
                    "db:validate:performance":  "bun scripts/performance-optimizer.js",
                    "db:validate:flow":  "bun scripts/cross-module-tester.js",
                    "db:validate:api":  "bun scripts/api-validation-suite.js",
                    "db:sample-data":  "bun scripts/sample-data-generator.js",
                    "ai:verify":  "bun scripts/verify-ai-providers.js",
                    "validate:api":  "bun scripts/validate-api-endpoints.ts",
                    "validate:browser":  "./node_modules/.bin/chrome-devtools-mcp validate --url http://localhost:3000",
                    "prepare":  "bun x husky install",
                    "lint:fix":  "bun x eslint . --ext .ts,.tsx --fix",
                    "format":  "bun x prettier --write \"**/*.{ts,tsx,json,md}\"",
                    "format:check":  "bun x prettier --check \"**/*.{ts,tsx,json,md}\"",
                    "validate:platform":  "./scripts/validate-with-mcp.sh",
                    "validate:platform:full":  "./scripts/validate-with-mcp.sh --full",
                    "perf:measure":  "./node_modules/.bin/chrome-devtools-mcp performance --url http://localhost:3000",
                    "e2e:devtools:ssot":  "bun scripts/e2e-devtools-ssot.ts",
                    "analyze":  "ANALYZE=true bun run build",
                    "analyze:server":  "ANALYZE=true BUNDLE_ANALYZE=server bun run build",
                    "analyze:browser":  "ANALYZE=true BUNDLE_ANALYZE=browser bun run build",
                    "// Integration Scripts":  "Commands for full inventory integration",
                    "db:purge":  "psql $NEON_SPP_DATABASE_URL -f database/scripts/purge_all_inventory_data.sql",
                    "db:verify-schema":  "psql $NEON_SPP_DATABASE_URL -f database/scripts/verify_schema_exists.sql",
                    "db:create-schemas":  "psql $NEON_SPP_DATABASE_URL -f database/scripts/create_missing_schemas.sql",
                    "import:master":  "bun scripts/import_master_dataset.ts",
                    "import:create-selection":  "bun scripts/create_default_selection.ts",
                    "import:seed-stock":  "bun scripts/seed_stock_on_hand.ts",
                    "integration:full":  "./scripts/run_full_integration.sh",
                    "integration:verify":  "bun scripts/verify_integration.ts",
                    "arch:two-tier:setup":  "bun scripts/setup-two-tier.ts",
                    "arch:two-tier:bootstrap":  "bun scripts/bootstrap-neon-two-dbs.ts",
                    "mcp:phase-a:apply":  "bun --bun scripts/neon-mcp-apply.ts --apply",
                    "mcp:phase-a:verify":  "bun --bun scripts/neon-mcp-apply.ts --verify",
                    "mcp:phase-a:all":  "bun --bun scripts/neon-mcp-apply.ts --apply --verify",
                    "// Deployment Scripts":  "Production deployment and emergency procedures",
                    "db:migrate:production":  "bun --bun scripts/migration-runner.ts",
                    "db:migrate:production:dry-run":  "bun --bun scripts/migration-runner.ts --dry-run",
                    "db:migrate:production:force":  "bun --bun scripts/migration-runner.ts --force",
                    "db:backup:production":  "bun --bun scripts/migration-runner.ts --no-validate --no-rollback",
                    "deploy:checklist":  "bun --bun scripts/pre-deployment-checklist.ts",
                    "deploy:checklist:staging":  "bun --bun scripts/pre-deployment-checklist.ts --environment=staging",
                    "deploy:checklist:production":  "bun --bun scripts/pre-deployment-checklist.ts --environment=production --strict",
                    "deploy:rollback":  "bun --bun scripts/emergency-rollback.ts",
                    "deploy:rollback:latest":  "bun --bun scripts/emergency-rollback.ts --latest",
                    "deploy:rollback:app":  "bun --bun scripts/emergency-rollback.ts --app-only --latest",
                    "deploy:rollback:db":  "bun --bun scripts/emergency-rollback.ts --db-only --latest",
                    "verify:deployment-system":  "bun --bun scripts/verify-deployment-system.ts",
                    "verify:vercel":  "bun --bun scripts/verify-vercel-setup.ts",
                    "// Production Configuration":  "Environment and secrets management",
                    "secrets:generate":  "bun --bun scripts/generate-production-secrets.ts",
                    "env:validate":  "bun --bun scripts/validate-env-config.ts",
                    "redis:test":  "bun --bun scripts/validate-redis-connection.ts",
                    "test:woo-buttons":  "bun scripts/tests/woo-buttons.spec.ts"
                },
