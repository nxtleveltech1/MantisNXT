    "secrets:generate": "tsx scripts/generate-production-secrets.ts",
    "env:validate": "tsx scripts/validate-env-config.ts",
    "redis:test": "tsx scripts/validate-redis-connection.ts",
    "db:test": "tsx scripts/test-database-connection.ts"
