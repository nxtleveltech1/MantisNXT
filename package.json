    "db:migrate:production": "tsx scripts/migration-runner.ts",
    "db:migrate:production:dry-run": "tsx scripts/migration-runner.ts --dry-run",
    "db:migrate:production:force": "tsx scripts/migration-runner.ts --force",
    "db:backup:production": "tsx scripts/migration-runner.ts --no-validate --no-rollback",
    "deploy:checklist": "tsx scripts/pre-deployment-checklist.ts",
    "deploy:checklist:staging": "tsx scripts/pre-deployment-checklist.ts --environment=staging",
    "deploy:checklist:production": "tsx scripts/pre-deployment-checklist.ts --environment=production --strict",
    "deploy:rollback": "tsx scripts/emergency-rollback.ts",
    "deploy:rollback:latest": "tsx scripts/emergency-rollback.ts --latest",
    "deploy:rollback:app": "tsx scripts/emergency-rollback.ts --app-only --latest",
    "deploy:rollback:db": "tsx scripts/emergency-rollback.ts --db-only --latest",
    "test:auth": "jest __tests__/auth/authentication.test.ts",
    "test:auth:watch": "jest __tests__/auth/authentication.test.ts --watch",
    "test:smoke": "jest --testPathPattern=smoke --testTimeout=30000",
    "verify:deployment-system": "tsx scripts/verify-deployment-system.ts",
