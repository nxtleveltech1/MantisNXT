# Production Environment Configuration for MantisNXT
# Copy this file to .env and customize for your production environment

# Application Environment
NODE_ENV=production
APP_PORT=3000
DOMAIN_NAME=your-domain.com
APP_URL=https://your-domain.com
BASE_URL=https://your-domain.com

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USER=mantisnxt
DB_NAME=mantisnxt
# Note: DB_PASSWORD is loaded from secrets/postgres_password.txt

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=generate_secure_redis_password_here
REDIS_URL=redis://:generate_secure_redis_password_here@redis:6379

# Supabase Configuration (if using Supabase)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
# Note: SUPABASE_SERVICE_ROLE_KEY is loaded from secrets/supabase_service_key.txt

# Security Configuration
# Note: JWT_SECRET is loaded from secrets/jwt_secret.txt
ENCRYPTION_KEY=generate_32_character_encryption_key_here
SESSION_SECRET=generate_32_character_session_secret_here
SESSION_TIMEOUT=3600000

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/csv,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet
UPLOAD_DIR=/app/uploads

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@domain.com
SMTP_PASSWORD=your_email_password_or_app_password
EMAIL_FROM=noreply@your-domain.com

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
SSL_DHPARAM_PATH=/etc/nginx/ssl/dhparam.pem

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_DOMAIN=monitoring.your-domain.com
GRAFANA_ROOT_URL=https://monitoring.your-domain.com
# Note: GRAFANA_PASSWORD is loaded from secrets/grafana_password.txt
LOKI_PORT=3100

# Nginx Configuration
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_AUDIT_LOGGING=true
ENABLE_RATE_LIMITING=true
ENABLE_CACHING=true
ENABLE_METRICS=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
DEBUG_MODE=false

# Database Migration
MIGRATION_MODE=up

# Performance Configuration
NODE_OPTIONS=--max-old-space-size=2048

# Security Headers
HSTS_MAX_AGE=31536000
CSP_REPORT_URI=https://your-domain.com/api/csp-report

# External Service URLs (for monitoring)
EXTERNAL_HEALTH_CHECK_URL=https://uptime-monitor.com/ping/your-check-id

# Application Metrics
METRICS_ENABLED=true
METRICS_PORT=9100

# Container Resource Limits
POSTGRES_MAX_MEMORY=1g
REDIS_MAX_MEMORY=512m
APP_MAX_MEMORY=1g
NGINX_MAX_MEMORY=256m

# High Availability Configuration
ENABLE_CLUSTERING=false
CLUSTER_NODES=1

# Development/Testing Override
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5433/test_db